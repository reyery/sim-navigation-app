<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/icaltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timetableurl"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-35dp"
        android:layout_marginStart="10dp"
        android:text="@string/ical_url"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/timetableurl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:hint="@string/url_hint"
        android:inputType="text" />

    <TextView
        android:id="@+id/invalid_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timetableurl"
        android:layout_marginStart="12dp"
        android:text="@string/invalid_url"
        android:textColor="#ff0000"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/timetableurl"
        android:layout_marginEnd="12dp"
        android:text="@string/button_download" />

</RelativeLayout>